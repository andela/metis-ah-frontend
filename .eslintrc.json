{
  "extends": ["airbnb", "prettier", "prettier/react"],
  "parser": "babel-eslint",
  "plugins": ["cypress", "jest", "prettier"],
  "env": {
    "browser": true,
    "cypress/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [".js", ".jsx"]
      }
    ],
    "quotes": [2, "single", { "avoidEscape": true }],
    "one-var": 0,
    "import/no-named-as-default": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "no-tabs": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": ["error", "multi-line"],
    "import/no-unresolved": [
      2,
      {
        "commonjs": true
      }
    ],
    "prettier/prettier": [
      {
      "trailingComma": "es5",
      "singleQuote": true
      }
    ]
  },
  "settings": {
    "import/resolver": "webpack"
  }
}
